@page
@model Lab1.Pages.Faculty.FacultyHomeModel
@{
}


<h2>Welcome [Faculty Name]</h2>

<a asp-page="/Faculty/AddGrant" class="btn btn-info">Add Grant</a>
<br/>
<h2>Project List</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Project Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Status</th>
            <th>Progress</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model.Projects)
        {
            <tr>
                <td>@project.ProjectName</td>
                <td>@project.StartDate.ToString("yyyy-MM-dd")</td>
                <td>@project.EndDate.ToString("yyyy-MM-dd")</td>
                <td>@project.ProjectStatus</td>
                <td>@project.ProgressStatus</td>
            </tr>
        }
    </tbody>
</table>
