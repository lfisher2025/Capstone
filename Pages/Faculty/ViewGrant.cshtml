@page
@model Lab1.Pages.Faculty.ViewGrantModel
@{
    ViewData["Title"] = "View Grants";
}

<h2>Grants</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="tempGrant.GrantName"></label>
        <input type="text" class="form-control" asp-for="tempGrant.GrantName" placeholder="Enter Grant Name" />
    </div>

    <div class="form-group">
        <label asp-for="tempGrant.FundingAgency"></label>
        <input type="text" class="form-control" asp-for="tempGrant.FundingAgency" placeholder="Enter Funding Agency" />
    </div>

    <div class="form-group">
        <label asp-for="tempGrant.SubmissionDate"></label>
        <input type="date" class="form-control" asp-for="tempGrant.SubmissionDate" />
    </div>

    <div class="form-group">
        <label asp-for="tempGrant.Deadline"></label>
        <input type="date" class="form-control" asp-for="tempGrant.Deadline" />
    </div>

    <div class="form-group">
        <label asp-for="tempGrant.ProposalID"></label>
        <input type="number" class="form-control" asp-for="tempGrant.ProposalID" />
    </div>

    <div class="form-group">
        <label asp-for="tempGrant.FundingAmount"></label>
        <input type="number" step="0.01" class="form-control" asp-for="tempGrant.FundingAmount" placeholder="Enter Funding Amount" />
    </div>

    <div class="form-group">
        <label asp-for="tempGrant.Type"></label>
        <input type="text" class="form-control" asp-for="tempGrant.Type" placeholder="Enter Grant Type" />
    </div>

    <div class="form-group">
        <label asp-for="tempGrant.GrantDescription"></label>
        <textarea class="form-control" asp-for="tempGrant.GrantDescription" placeholder="Enter Grant Description"></textarea>
    </div>

    <div class="form-group">
        <!-- Ideally a dropdown of User Names -->
        <label asp-for="tempGrant.UserID"></label>
        <input type="number" class="form-control" asp-for="tempGrant.UserID" />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Search</button>
</form>

@{ //Used ChatGPT to troubleshoot my switch case (Lines 30-37)
    string GetStatusClass(string status)
    {
        return status switch
        {
            "Applied" => "text-primary",
            "Pending" => "text-warning",
            "Approved" => "text-success",
            "Rejected" => "text-danger",
            _ => "text-dark"
        };
    }
}

<
<table class="table table-striped">
    <thead>
        <tr>
            <th>Grant Name</th>
            <th>Funding Agency</th>
            <th>Submission Date</th>
            <th>Deadline</th>
            <th>Proposal ID</th>
            <th>Funding Amount</th>
            <th>Type</th>
            <th>Description</th>
            <th>User ID</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var grant in Model.GrantInfo)
        {
            <tr>
                <td>@grant.GrantName</td>
                <td>@grant.FundingAgency</td>
                <td>@grant.SubmissionDate.ToString("yyyy-MM-dd")</td>
                <td>@grant.Deadline.ToString("yyyy-MM-dd")</td>
                <td>@grant.ProposalID</td>
                <td>@grant.FundingAmount.ToString("C")</td>
                <td>@grant.Type</td>
                <td>@grant.GrantDescription</td>
                <td>@grant.UserID</td>
            </tr>
        }
    </tbody>
</table>
