                            <h6 id="fundingSourceTitle" class="fw-bold mb-3"></h6>
                            <ul class="list-group" id="fundingSourceList"></ul>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Partnership Development Modal -->
            <div class="modal fade" id="partnershipModal" tabindex="-1" aria-labelledby="partnershipModalLabel" aria-hidden="true">
