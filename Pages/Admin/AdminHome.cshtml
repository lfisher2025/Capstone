                            <h6 id="partnershipStageTitle" class="fw-bold mb-3"></h6>
                            <ul class="list-group" id="partnershipStageList"></ul>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>


            <script>
                // Match doughnut chart slice colors
                const statusColors = {
                  "Completed": "rgb(158, 119, 203)",     // Purple
                  "In Progress": "rgb(119, 203, 161)",   // Green
                  "Not Started": "rgb(203, 119, 138)"    // Red/Pink
                };

                // Sample project data for each status
                const projectStatusData = {
                  "Completed": ["Project A", "Project B", "Project C"],
                  "In Progress": ["Project D", "Project E"],
                  "Not Started": ["Project F"]
                };

                const modalStatusTitle = document.getElementById("modalStatusTitle");
                const modalStatusList = document.getElementById("modalStatusList");

                // Chart click logic
                document.getElementById('projectCompletionChart').onclick = function(evt) {
                  const activePoints = projectCompletionChart.getElementsAtEventForMode(evt, 'nearest', { intersect: true }, true);

                  if (activePoints.length) {
                    const index = activePoints[0].index;
                    const label = projectCompletionChart.data.labels[index];
                    const projects = projectStatusData[label] || [];
                    const color = statusColors[label] || '#000';

                    // Set modal title and color
                    modalStatusTitle.textContent = label;
                    modalStatusTitle.style.color = color;

                    // Clear list and add new items
                    modalStatusList.innerHTML = "";
                    projects.forEach(project => {
                      const listItem = document.createElement("li");
                      listItem.className = "list-group-item";
                      listItem.textContent = project;
                      listItem.style.color = color;
                      modalStatusList.appendChild(listItem);
                    });

                    // Show modal
                    const modal = new bootstrap.Modal(document.getElementById('projectStatusModal'));
                    modal.show();
                  }
                };
            </script>

            <script>
                const fundingSourceData = {
                  "Federal Grants": ["NIH Grant A", "DOE Research Award"],
                  "State Grants": ["Virginia Research Grant", "Education Initiative"],
                  "Internal Funding": ["University Innovation Fund", "Faculty Support"],
                  "Private Foundations": ["Gates Foundation", "Carnegie Trust"]
                };

                const fundingColors = {
                  "Federal Grants": "rgb(203, 182, 119)",
                  "State Grants": "rgb(203, 119, 138)",
                  "Internal Funding": "rgb(158, 119, 203)",
                  "Private Foundations": "rgb(119, 203, 161)"
                };

                const fundingSourceTitle = document.getElementById("fundingSourceTitle");
                const fundingSourceList = document.getElementById("fundingSourceList");

                document.getElementById('fundingAllocationChart').onclick = function(evt) {
                  const activePoints = fundingAllocationChart.getElementsAtEventForMode(evt, 'nearest', { intersect: true }, true);

                  if (activePoints.length) {
                    const index = activePoints[0].index;
                    const label = fundingAllocationChart.data.labels[index];
                    const items = fundingSourceData[label] || [];
                    const color = fundingColors[label] || '#000';

                    fundingSourceTitle.textContent = label;
                    fundingSourceTitle.style.color = color;

                    fundingSourceList.innerHTML = "";
                    items.forEach(item => {
                      const listItem = document.createElement("li");
                      listItem.className = "list-group-item";
                      listItem.textContent = item;
                      listItem.style.color = color;
                      fundingSourceList.appendChild(listItem);
                    });

                    const modal = new bootstrap.Modal(document.getElementById('fundingModal'));
                    modal.show();
                  }
                };
            </script>


            <script>
                  const fundingAllocationChart = new Chart(document.getElementById('fundingAllocationChart'), {
                  type: 'pie',
                  data: {
                    labels: ['Federal Grants', 'State Grants', 'Internal Funding', 'Private Foundations'],
                    datasets: [{
                      label: 'Funding Sources',
                      data: [40, 20, 30, 10],
                      backgroundColor: [
                        'rgb(203, 182, 119)',  // Federal
                        'rgb(203, 119, 138)',  // State
                        'rgb(158, 119, 203)',  // Internal
                        'rgb(119, 203, 161)'   // Private
                      ]
                    }]
                  },
                  options: {
                    responsive: true
                  }
                });

                      //PartnershipChart
                        const partnershipStagesChart = new Chart(document.getElementById('partnershipStagesChart'), {
                  type: 'bar',
                  data: {
                    labels: ['Prospect', 'Initial Contact', 'Negotiation', 'Active', 'Completed'],
                    datasets: [{
                      label: 'Number of Partnerships',
                      data: [3, 5, 2, 4, 6],
                      backgroundColor: [
                        '#b19cd9',    // Prospect
                        '#f4c542',    // Initial Contact
                        '#f28b82',    // Negotiation
                        '#81c995',    // Active
                        '#a0aec0'     // Completed
                      ]
                    }]
                  },
                  options: {
                    responsive: true,
                    scales: {
                      x: { beginAtZero: true },
                      y: { beginAtZero: true }
                    }
                  }
                });



                        // Project Completion Metrics (Progress Bar)
                        const projectCompletionChart = new Chart(document.getElementById('projectCompletionChart'), {
                            type: 'doughnut',
                            data: {
                                labels: ['Completed', 'In Progress', 'Not Started'],
                                datasets: [{
                                    label: 'Project Status',
                                    data: [60, 30, 10],
                                    backgroundColor: ['rgb(158, 119, 203)', 'rgb(119, 203, 161)', 'rgb(203, 119, 138)'],
                                }]
                            },
                            options: {
                                responsive: true
                            }
                        });
            </script>
            <script>
                const partnershipStageData = {
                  "Prospect": ["New Company A", "Local Business B"],
                  "Initial Contact": ["Email Sent to C", "Meeting Scheduled with D"],
