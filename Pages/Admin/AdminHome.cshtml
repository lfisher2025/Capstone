            <script>
                let currentDate = new Date(); // today

                function renderCalendar() {
                    const calendarDays = document.getElementById("calendarDays");
                    const calendarMonth = document.getElementById("calendarMonth");
                    calendarDays.innerHTML = "";

                    const startOfWeek = new Date(currentDate);
                    startOfWeek.setDate(currentDate.getDate() - currentDate.getDay()); // Start on Sunday

                    const options = { month: "long", year: "numeric" }; //Month and Year
                    calendarMonth.textContent = currentDate.toLocaleDateString("en-US", options);

                    const today = new Date().toDateString();

                    for (let i = 0; i < 7; i++) { //Used AI to help create calendar
                        const date = new Date(startOfWeek);
                        date.setDate(startOfWeek.getDate() + i);

                        const wrapper = document.createElement("div");
                        wrapper.style.textAlign = "center";
                        wrapper.style.margin = "0 8px";

                        const label = document.createElement("div");
                        label.textContent = date.toLocaleDateString("en-US", { weekday: 'short' }).charAt(0);

                        const day = document.createElement("div");
                        day.textContent = date.getDate();
                        day.className = "day";
                        if (date.toDateString() === today) {
                            day.classList.add("selected");
                        }

                        wrapper.appendChild(label);
                        wrapper.appendChild(day);
                        calendarDays.appendChild(wrapper);
                    }
                }

                document.getElementById("prevWeek").onclick = () => { //Arrow functionality
                    currentDate.setDate(currentDate.getDate() - 7);
                    renderCalendar();
                };

                document.getElementById("nextWeek").onclick = () => {
                    currentDate.setDate(currentDate.getDate() + 7);
                    renderCalendar();
                };

                renderCalendar();
            </script>

