                            <h5>Partnership Development Stages</h5>
                            <canvas id="partnershipStagesChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!--total grants modal-->
            <div class="modal fade" id="GrantCardModal" tabindex="-1" aria-labelledby="GrantModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="GrantModalLabel">Grant Details</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            @foreach (var grant in Model.GrantInfo)
                            {
                                <p>@grant.GrantName - $@grant.FundingAmount.ToString("N2")</p>
                            }
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>

            <!--current projects modal-->
            <div class="modal fade" id="ProjectModal" tabindex="-1" aria-labelledby="ProjectModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="ProjectModalLabel">Active Project Details</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">

                            @foreach (var project in Model.Projects)
                            {
                                if (project.ProjectStatus == "In Progress") {
                                    <p>@project.ProjectName - @project.EndDate.ToString("yyyy-MM-dd")</p>
                                }
                            }
