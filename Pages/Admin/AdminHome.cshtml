            <script>
                // Match doughnut chart slice colors
                const statusColors = {
                "Completed": "rgb(158, 119, 203)",     // Purple
                "In Progress": "rgb(119, 203, 161)",   // Green
                "Not Started": "rgb(203, 119, 138)"    // Red/Pink
                };

                // Project data by status
                const projectStatusData =  @Html.Raw(Json.Serialize(Model.ProjectStatusData));
               

                const modalStatusTitle = document.getElementById("modalStatusTitle");
                const modalStatusList = document.getElementById("modalStatusList");

                // Chart click logic
                document.getElementById('projectCompletionChart').onclick = function(evt) {
                const activePoints = projectCompletionChart.getElementsAtEventForMode(evt, 'nearest', { intersect: true }, true);

                if (activePoints.length) {
                const index = activePoints[0].index;
                const label = projectCompletionChart.data.labels[index];
                const projects = projectStatusData[label] || [];
                const color = statusColors[label] || '#000';

                // Set modal title and color
                modalStatusTitle.textContent = label;
                modalStatusTitle.style.color = color;

                // Clear list and add new items
                modalStatusList.innerHTML = "";
                projects.forEach(project => {
                const listItem = document.createElement("li");
                listItem.className = "list-group-item";
                listItem.textContent = project;
                listItem.style.color = color;
                modalStatusList.appendChild(listItem);
                });

                // Show modal
                const modal = new bootstrap.Modal(document.getElementById('projectStatusModal'));
                modal.show();
                }
                };
            </script>

