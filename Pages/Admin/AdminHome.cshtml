                            <h5>Project Completion Metrics</h5>
                            <canvas id="projectCompletionChart"></canvas>
                        </div>
                    </div>

                    <!-- Calendar beside Project Chart -->
                    <div class="col-md-6">
                        <div class="calendar-container mb-4">
                            <div class="d-flex justify-content-between align-items-center">
                                <button class="btn btn-sm" id="prevWeek"><i class="bi bi-chevron-left"></i></button>
                                <h6 class="mb-0" id="calendarMonth"></h6>
