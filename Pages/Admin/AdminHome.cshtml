                                        <li class="list-group-item">Project B</li>
                                        <li class="list-group-item">Project C</li>
                                    </ul>
                                </div>

                                <!-- In Progress Projects -->
                                <div class="mb-4">
                                    <h6 class="text-warning">In Progress</h6>
                                    <ul class="list-group">
                                        <li class="list-group-item">Project D</li>
