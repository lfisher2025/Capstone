@using static System.Net.WebRequestMethods
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Lab1 Application" />
    <title>@ViewData["Title"] - Lab1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Lab1.styles.css" asp-append-version="true" />
    <!--Please leave the render section below this, it is required for the calendar to render-->
    @RenderSection("Styles", required: false) 
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .navbar {
            
        }

        .navbar-brand, .nav-link {

        }
        .navbar-toggler-icon {
            
        }
        .navbar-nav .nav-link:hover {
            
        }

        .navbar-nav .nav-item.dropdown:hover .dropdown-menu {
            display: block;
        }

        .footer {
            
            padding: 5px 0;
            display: block;
            position: sticky;
            bottom: 8px;
            right: 16px;
        }
        .footer a {
            
        }
        .footer a:hover {
            text-decoration: underline;
        }

        .btn-outline-danger {
            border-color: #dc3545;
            color: #dc3545;
        }

        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: #fff;
        }

        .container {
            margin-top: 20px;
        }

        /* Improve dropdown visibility in collapsed navbar */
        .navbar-collapse.collapse {
            display: block !important;
        }

        #inbox {
            position: sticky;
            top: 0;
            right: 0;
        }

    </style>
</head>

<body>@*
    <header>
         <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="container">
                @{
                    var userType = Context.Session.GetString("UserType") != null ? Convert.ToInt32(Context.Session.GetString("UserType")) : 0;
                    string pageLink = userType switch
                    {
                        1 => "/Admin/AdminHome",
                        2 => "/Faculty/FacultyHome",
                        3 => "/Employee/EmployeeHome",
                        4 => "/BusinessPartners/BusinessPartnerHome",
                        _ => "/Index" // default page if userType is not set
                    };
                }
                <a class="navbar-brand" asp-area="" asp-page="@pageLink">Lab 3</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Menu
                            </a>
                            <ul class="dropdown-menu bg-dark text-white">
                                <li><a class="dropdown-item text-white" asp-page="/Calendar/Calendar">Calendar</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-white" asp-page="/Admin/AdminHome">Admin</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-white" asp-page="/Admin/AddBusinessPartner">Add Partner</a></li>
                                <li><a class="dropdown-item text-white" asp-page="/Admin/AddUser">Add User</a></li>
                                <li><a class="dropdown-item text-white" asp-page="/Admin/AdminViewProject">Projects</a></li>
                                <li><a class="dropdown-item text-white" asp-page="/Admin/ManageBusinessPartners">Manage Partners</a></li>
                                <li><a class="dropdown-item text-white" asp-page="/Admin/Meetings">Meetings</a></li>
                                <li><a class="dropdown-item text-white" asp-page="/Admin/NewProject">Start a new project</a></li>
                                <li><a class="dropdown-item text-white" asp-page="/BusinessPartners/BusinessPartnerHome">Business Partners</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-white" asp-page="/Employee/EmployeeHome">Employees</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-white" asp-page="/Employee/EmployeeViewProject">Projects</a></li>
                                <li><a class="dropdown-item text-white" asp-page="/Faculty/FacultyHome">Faculty</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-white" asp-page="/Faculty/AddGrant">Add Grant</a></li>
                                <li><a class="dropdown-item text-white" asp-page="/Faculty/ViewGrant">View Grants</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                
                @{
                    if (Context.Session.GetString("username") != null)
                    {
                        <a class="btn btn-danger me-2" asp-page="/HashedLogin/Logout">Logout</a> /*me-2 sets distance between buttons */
                        <button type="button" id="inbox" class="btn btn-primary position-relative text-white " onclick="location.href='/Messaging/Inbox'">
                            Inbox
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                55+
                                <span class="visually-hidden">unread messages</span>
                            </span>
                        </button>
                    }
                    }
                <br/>
  
            </div>
        </nav>
    </header> 
